{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://web4.dev/schemas/problem-details.json",
  "title": "Web4 Problem Details",
  "type": "object",
  "required": [
    "title",
    "status",
    "code"
  ],
  "properties": {
    "type": {
      "type": "string",
      "format": "uri-reference"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599
    },
    "code": {
      "type": "string",
      "pattern": "^W4_[A-Z_]+$"
    },
    "detail": {
      "type": "string"
    },
    "instance": {
      "type": "string",
      "format": "uri-reference"
    }
  },
  "additionalProperties": true
}